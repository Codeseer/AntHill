extends ../layout

block content
  form(action="/projects", method="POST")
    label(for='projectname') Project Name
    input(type='text', name='projectname', id='projectname', maxLength='255')
    
    label(for='mode') COCOMO Mode
    select(name='mode', id='mode')
      option(value='organic') Organic
      option(value='semi-detached') Semi-detached
      option(value='embedded') Embedded
    
    h2 Project Attributes
    input(type='radio', name='RELY', value='0.75') Very Low
    input(type='radio', name='RELY', value='0.88') Low
    input(type='radio', name='RELY', value='1') Nominal
    input(type='radio', name='RELY', value='1.15') High
    input(type='radio', name='RELY', value='1.4') Very High
    
    br
    
    input(type='radio', name='DATA', value='0.94') Low
    input(type='radio', name='DATA', value='1') Nominal
    input(type='radio', name='DATA', value='1.08') High
    input(type='radio', name='DATA', value='1.16') Very High

    br

    input(type='radio', name='CPLX', value='0.7') Very Low
    input(type='radio', name='CPLX', value='0.85') Low
    input(type='radio', name='CPLX', value='1') Nominal
    input(type='radio', name='CPLX', value='1.15') High
    input(type='radio', name='CPLX', value='1.3') Very High
    input(type='radio', name='CPLX', value='1.65') Extra High

    br

    input(type='radio', name='TIME', value='0.7') Very Low
    input(type='radio', name='TIME', value='0.85') Low
    input(type='radio', name='TIME', value='1') Nominal
    input(type='radio', name='TIME', value='1.15') High
    input(type='radio', name='TIME', value='1.3') Very High
    input(type='radio', name='TIME', value='1.65') Extra High
    

    button(type='submit') Create